<UserControl
    x:Class="HappyRoute4.Common.Angler"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

    <Canvas x:Name="panel" Background="Transparent" ManipulationMode="TranslateX, TranslateY">
        <Ellipse Stroke="{StaticResource ApplicationForegroundThemeBrush}" x:Name="ellipseRotor">
            <Ellipse.RenderTransform>
                <RotateTransform x:Name="rotateEllipse"/>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Canvas>
</UserControl>
