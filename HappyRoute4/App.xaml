<prism:PrismUnityApplication
    x:Class="HappyRoute4.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="using:Prism.Unity.Windows"
    xmlns:converters="using:HappyRoute4.Converters"
    >

    <Application.Resources>
        <ResourceDictionary>
            <converters:BnezConverter x:Key="BnezConverter"/>
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
            <converters:NumberNamesToVisibilityConverter x:Key="NumberNamesToVisibilityConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/SplitViewStyles.xaml" />
                <ResourceDictionary Source="/Themes/SettingsToggleButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</prism:PrismUnityApplication>
